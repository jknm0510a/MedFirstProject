<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.medfirst.com.project.MainActivity">

    <com.dolphinwang.imagecoverflow.CoverFlowView
        xmlns:imageCoverFlow="http://schemas.android.com/apk/res-auto"
        android:id="@+id/coverflow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="310dip"
        android:paddingRight="310dip"
        android:layout_marginTop="80dip"
        imageCoverFlow:coverflowGravity="center_vertical"
        imageCoverFlow:coverflowLayoutMode="wrap_content"
        imageCoverFlow:reflectionHeight="0%"
        imageCoverFlow:visibleImage="5">
    </com.dolphinwang.imagecoverflow.CoverFlowView>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="35dip"
        android:text="商品介紹"
        android:textSize="50sp"
        android:textColor="#ff449aa2"
        android:gravity="center"
        android:layout_marginBottom="100dip"/>
    <include layout="@layout/notifications_view"
        android:layout_width="1300dip"
        android:layout_height="150dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
